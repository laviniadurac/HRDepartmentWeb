<form id="applicationForm" asp-action="Create">

    @using (Html.BeginForm("AddFutureEmployee", "FutureEmployee", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h1 class="text-center" style="margin-top: 50px; text-shadow: 2px 2px 5px black;">New application</h1>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="">
            <partial name="_DetailsApplicant" model="@Model" />
        </div>

        <div class="">
            <partial name="_JobDetails" model="@Model" />
        </div>


        <div class="">
            <partial name="_ExperienceEmployee" model="@Model" />
        </div>


        <div class="form-group">
            <div class="container-fluid">
                <input type="submit" class="button button4" value="Submit" form="applicationForm" />
            </div>
        </div>

    }
</form>

