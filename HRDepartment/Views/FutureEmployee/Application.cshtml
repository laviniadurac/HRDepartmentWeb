@model HRDepartment.ViewModels.JobListViewModel

<form>

    @using (Html.BeginForm("AddFutureEmployee", "FutureEmployee", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <br /><br /><h4>New application</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })


        <h1 class="title-formular">Personal Details</h1>

        <div class="form-group">
            @Html.LabelFor(m => m.FutureEmployee.EmployeeName, new { @class = "control-label" })
            <div>
                @Html.TextBoxFor(m => m.FutureEmployee.EmployeeName, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-row">

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.FutureEmployee.Email, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.FutureEmployee.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.FutureEmployee.PhoneNumber, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.FutureEmployee.PhoneNumber, new { @class = "form-control" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.FutureEmployee.Address, new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(m => m.FutureEmployee.Address, new { @class = "form-control" })
            </div>
        </div>


        <h1 class="title-formular">Job</h1>
        <br /><br /><br /><br />



        <table class="table">
        @*<table class="table">
            <thead>
                <tr>

                    <th>

                        @Html.DropDownList("Jobs", Model.Jobs, "--Select Job--", new { style = "width:180px;" })

                    </th>
                </tr>
            </thead>

        </table>


        <h1 class="title-formular">Experience</h1>
        <br />


        <div class="form-group">
            @Html.LabelFor(m => m.FutureEmployee.OtherDetails, new { @class = "col-md-2 control-label" })
            <div>
                @Html.TextAreaFor(m => m.FutureEmployee.OtherDetails, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group" id="cv">
            @Html.LabelFor(m => m.FutureEmployee.CV, new { @class = "col-md-2 control-label" })
            <div>
                @Html.TextBoxFor(m => m.FutureEmployee.CV, new { @type = "file", @multiple = "multiple", name = "Files", id = "CV" })
            </div>
        </div>


        <div class="form-group">
            <div>
                <input type="submit" class="button button4" value="Submit" />
            </div>
        </div>



    }
</form>
