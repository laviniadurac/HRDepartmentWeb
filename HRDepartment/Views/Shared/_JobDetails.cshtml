@model HRDepartment.ViewModels.JobListViewModel

<h1 class="title-formular">Job</h1>
<h3 class="text-primary" style="font-weight:bolder; margin-bottom:20px; margin-top:20px;">Select the job you are interested in.</h3>

<div class="form-group">
    <text>Select experience: </text>
    @Html.DropDownList("Job", Model.Jobs, htmlAttributes: new { @class = "form-control" })
    <span asp-validation-for="Job" class="text-danger" />
    @Html.ValidationMessageFor(x => x.Jobs)
</div>


<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#Jobs").change(function () {
            $.get('')
        })
    })
</script>