@(Html.DevExtreme().DataGrid<HRDepartment.Models.FutureEmployee>()
    .DataSource(ds => ds.Mvc()
        .Controller("FutureEmployee")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("EmployeeId")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.EmployeeId);

        columns.AddFor(m => m.EmployeeName);

        columns.AddFor(m => m.Technologies);

        columns.AddFor(m => m.Experience);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)